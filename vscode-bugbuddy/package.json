{
  "name": "bugbuddy",
  "publisher": "nedpals",
  "displayName": "BugBuddy",
  "icon": "images/icon.png",
  "description": "Official VSCode extension for BugBuddy",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.2"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bugbuddy.run",
        "title": "BugBuddy: Run File / Project",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
        "command": "bugbuddy.run",
        "key": "ctrl+alt+n"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "true",
          "command": "bugbuddy.run",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
          "when": "true",
          "command": "bugbuddy.run",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "BugBuddy",
      "properties": {
        "bugbuddy.path": {
          "scope": "resource",
          "type": "string",
          "description": "Custom path to BugBuddy executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.23",
    "@types/vscode": "^1.76.2",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
