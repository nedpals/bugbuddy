{
  "name": "bugbuddy",
  "publisher": "nedpals",
  "displayName": "BugBuddy",
  "icon": "images/icon.png",
  "description": "Official VSCode extension for BugBuddy",
  "repository": {
    "type": "git",
    "url": "https://github.com/nedpals/bugbuddy/tree/master/vscode-bugbuddy"
  },
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.76.2"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bugbuddy.run",
        "title": "BugBuddy: Run File / Project",
        "icon": "$(play)"
      },
      {
        "command": "bugbuddy.copyParticipantId",
        "title": "BugBuddy: Copy Participant ID"
      }
    ],
    "keybindings": [
      {
        "command": "bugbuddy.run",
        "key": "ctrl+alt+n"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "true",
          "command": "bugbuddy.run",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
          "when": "true",
          "command": "bugbuddy.run",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "BugBuddy",
      "properties": {
        "bugbuddy.path": {
          "scope": "resource",
          "type": "string",
          "description": "Custom path to BugBuddy executable"
        },
        "bugbuddy.dataDirPath": {
          "scope": "resource",
          "type": "string",
          "description": "Custom path to BugBuddy data directory. Leave blank to use the default directory"
        },
        "bugbuddy.daemonPort": {
          "scope": "resource",
          "type": "number",
          "description": "Custom port for BugBuddy daemon",
          "default": 3434
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run esbuild",
    "watch": "npm run esbuild-watch",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.23",
    "@types/vscode": "^1.76.2",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.23.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
